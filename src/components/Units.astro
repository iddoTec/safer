---
import { Image } from "astro:assets";
import producto1 from "../../public/img/collage1.png";
import producto2 from "../../public/img/collage2.png";
import producto3 from "../../public/img/collage3.png";
---

<section id="promotions" class="scroll-mt-16 lg:p-4 lg:grid lg:grid-cols-3">
    <article class="col-span-2">
        <div
            data-hs-carousel='{"loadingClasses": "opacity-0", "isAutoPlay": true }'
            class="relative"
        >
            <div
                class="hs-carousel relative overflow-hidden w-full min-h-96 lg:rounded-s-3xl sm:min-h-[35rem] lg:min-h-[700px]"
            >
                <div
                    class="hs-carousel-body absolute top-0 bottom-0 start-0 flex flex-nowrap transition-transform duration-700 opacity-0"
                >
                    <div class="hs-carousel-slide">
                        <a href="/catalog/category1">
                            <div class="flex justify-center h-full">
                                <Image
                                    class="object-cover object-top w-full"
                                    src={producto1}
                                    alt="producto1"
                                />
                            </div>
                        </a>
                    </div>
                    <!-- card 2 -->
                    <div class="hs-carousel-slide">
                        <a href="/catalog/category1">
                            <div class="flex justify-center h-full">
                                <Image
                                    class="object-cover object-top w-full"
                                    src={producto2}
                                    alt="producto1"
                                />
                            </div>
                        </a>
                    </div>
                    <!-- card 3 -->
                    <div class="hs-carousel-slide">
                        <a href="/catalog/category1">
                            <div class="flex justify-center h-full">
                                <Image
                                    class="object-cover object-top w-full"
                                    src={producto3}
                                    alt="producto1"
                                />
                            </div>
                        </a>
                    </div>
                </div>
            </div>

            <button
                type="button"
                class="hs-carousel-prev hs-carousel:disabled:opacity-50 disabled:pointer-events-none absolute inset-y-0 start-0 inline-flex justify-center items-center w-[46px] h-full text-gray-800 hover:bg-gray-800/[.1]"
            >
                <span class="text-2xl" aria-hidden="true">
                    <svg
                        class="size-6 fill-white"
                        xmlns="http://www.w3.org/2000/svg"
                        width="16"
                        height="16"
                        fill="currentColor"
                        viewBox="0 0 16 16"
                    >
                        <path
                            fill-rule="evenodd"
                            d="M11.354 1.646a.5.5 0 0 1 0 .708L5.707 8l5.647 5.646a.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708l6-6a.5.5 0 0 1 .708 0z"
                        ></path>
                    </svg>
                </span>
                <span class="sr-only">Previous</span>
            </button>
            <button
                type="button"
                class="hs-carousel-next hs-carousel:disabled:opacity-50 disabled:pointer-events-none absolute inset-y-0 end-0 inline-flex justify-center items-center w-[46px] h-full text-gray-800 hover:bg-gray-800/[.1]"
            >
                <span class="sr-only">Next</span>
                <span class="text-2xl" aria-hidden="true">
                    <svg
                        class="size-6 fill-white"
                        xmlns="http://www.w3.org/2000/svg"
                        width="16"
                        height="16"
                        fill="currentColor"
                        viewBox="0 0 16 16"
                    >
                        <path
                            fill-rule="evenodd"
                            d="M4.646 1.646a.5.5 0 0 1 .708 0l6 6a.5.5 0 0 1 0 .708l-6 6a.5.5 0 0 1-.708-.708L10.293 8 4.646 2.354a.5.5 0 0 1 0-.708z"
                        ></path>
                    </svg>
                </span>
            </button>

            <div
                class="hs-carousel-pagination flex justify-center absolute bottom-3 start-0 end-0 space-x-2"
            >
                <span
                    class="hs-carousel-active:bg-safer-700 hs-carousel-active:border-safer-600 size-3 border border-gray-400 rounded-full cursor-pointer"
                ></span>
                <span
                    class="hs-carousel-active:bg-safer-700 hs-carousel-active:border-safer-600 size-3 border border-gray-400 rounded-full cursor-pointer"
                ></span>
                <span
                    class="hs-carousel-active:bg-safer-700 hs-carousel-active:border-safer-600 size-3 border border-gray-400 rounded-full cursor-pointer"
                ></span>
            </div>
        </div>
    </article>
    <article
        class="w-full flex flex-col items-center justify-center gap-10 p-6 bg-gradient-to-b from-safer-700 to-safer-600 lg:rounded-e-3xl text-base font-semibold text-white lg:text-xl lg:gap-16"
    >
        <h2 class="text-4xl text-white font-bold text-center mb-4 lg:text-6xl">
            Nuestras Unidades
        </h2>
        <div>
            <h4 class="mb-4">Contamos con:</h4>
            <ul class="list-disc">
                <li>Operadores altamente capacitados</li>
                <li>Sistema GPS en todas nuestras unidades</li>
                <li>Unidades de modelo reciente</li>
                <li>Unidades aseguradas</li>
            </ul>
        </div>
        <a href="../../public/img/ctg.pdf" download="catálogo.pdf" class="bg-safer-200 text-safer-950 w-60 rounded-2xl h-12 flex justify-center items-center shadow-lg hover:shadow-xl hover:bg-safer-100 hover:transform hover:scale-105 duration-300 active:bg-safer-600">Descargar El Catálogo</a>
    </article>
</section>
