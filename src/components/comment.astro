<div class="px-4 sm:px-6 lg:px-8 lg:py-14 mx-auto">
    <div class="mx-auto max-w-lg">
        <div class="text-center">
            <h4 class="text-xl text-gray-800 font-bold lg:text-3xl">
                Buzón de Sugerencias
            </h4>
        </div>

        <!-- Card -->
        <div class="mt-5 p-6 bg-white lg:shadow-lg lg:rounded-lg">
            <form id="suggestion-form">
                <div class="mb-4">
                    <label for="name" class="block mb-2 text-sm font-medium">
                        Nombre
                    </label>
                    <input
                        type="text"
                        id="name"
                        name="name"
                        class="py-3 px-4 block w-full border border-gray-300 rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500"
                        placeholder="Nombre completo"
                        required
                    />
                </div>

                <div class="mb-4">
                    <label for="email" class="block mb-2 text-sm font-medium">
                        Correo Electrónico
                    </label>
                    <input
                        type="email"
                        id="email"
                        name="email"
                        class="py-3 px-4 block w-full border border-gray-300 rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500"
                        placeholder="Email"
                        required
                    />
                </div>

                <div class="mb-4">
                    <label for="message" class="block mb-2 text-sm font-medium">
                        Sugerencia
                    </label>
                    <textarea
                        id="message"
                        name="message"
                        rows="4"
                        class="py-3 px-4 block w-full border border-gray-300 rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500"
                        placeholder="Escriba su comentario..."
                        required></textarea>
                </div>

                <div class="mt-6">
                    <button
                        type="submit"
                        id="submit-btn"
                        class="w-full py-3 px-4 inline-flex justify-center items-center gap-x-2 text-sm font-medium rounded-lg bg-blue-600 text-white hover:bg-blue-700 focus:outline-none focus:bg-blue-700 disabled:opacity-50 disabled:pointer-events-none"
                        disabled
                    >
                        Enviar
                    </button>
                </div>
            </form>
        </div>
        <!-- End Card -->
    </div>
</div>


<script>
    document.addEventListener("DOMContentLoaded", function () {
        const form = document.getElementById("suggestion-form") as HTMLFormElement;
        const submitBtn = document.getElementById("submit-btn") as HTMLButtonElement;
        const inputs = form.querySelectorAll("input, textarea");

        inputs.forEach(input => {
            input.addEventListener("input", () => {
                const allFilled = Array.from(inputs).every(input => {
                    // Usamos Type Assertion para que TypeScript sepa que estos elementos tienen 'value'
                    const element = input as HTMLInputElement | HTMLTextAreaElement;
                    return element.value.trim() !== "";
                });
                submitBtn.disabled = !allFilled;
            });
        });

        form.addEventListener("submit", async function (e) {
            e.preventDefault();

            const name = (form.querySelector("#name") as HTMLInputElement).value;
            const email = (form.querySelector("#email") as HTMLInputElement).value;
            const message = (form.querySelector("#message") as HTMLTextAreaElement).value;

            const data = {
                name: name,
                email: email,
                message: message
            };

            try {
                const response = await fetch('https://pbpgulqeverlxooyuwgm.supabase.co/rest/v1/sugerencias', {
                    method: 'POST',
                    headers: {
                        'apikey': 'eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6InBicGd1bHFldmVybHhvb3l1d2dtIiwicm9sZSI6ImFub24iLCJpYXQiOjE3MjQ4OTExNzEsImV4cCI6MjA0MDQ2NzE3MX0.56nr_2tMjHEk9wnnU602LVA_01o5G8Hm1Ra4UhPZceM',
                        'Authorization': 'Bearer eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6InBicGd1bHFldmVybHhvb3l1d2dtIiwicm9sZSI6ImFub24iLCJpYXQiOjE3MjQ4OTExNzEsImV4cCI6MjA0MDQ2NzE3MX0.56nr_2tMjHEk9wnnU602LVA_01o5G8Hm1Ra4UhPZceM',
                        'Content-Type': 'application/json',
                        'Prefer': 'return=minimal'
                    },
                    body: JSON.stringify(data)
                });

                if (response.ok) {
                    alert("¡Gracias por tu sugerencia!");
                    form.reset(); // Reiniciar el formulario después de enviarlo
                    submitBtn.disabled = true; // Deshabilitar el botón de envío nuevamente
                } else {
                    alert("Hubo un problema al enviar tu sugerencia, intenta de nuevo");
                }
            } catch (error) {
                console.error("Error:", error);
            }
        });
    });
</script>